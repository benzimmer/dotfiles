# Path to your oh-my-zsh configuration.
export ZSH=$HOME/.dotfiles/oh-my-zsh

# Set to the name theme to load.
# Look in ~/.oh-my-zsh/themes/
export ZSH_THEME="ben"

# Set to this to use case-sensitive completion
# export CASE_SENSITIVE="true"

# Comment this out to disable weekly auto-update checks
export DISABLE_AUTO_UPDATE="true"

# Uncomment following line if you want to disable colors in ls
# export DISABLE_LS_COLORS="true"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(brew bundler gem git github osx pip python rails rails3 ruby vundle)

source $ZSH/oh-my-zsh.sh


# Customize to your needs...
PATH="/usr/local/bin:/usr/local/sbin/:/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/share/python:${HOME}/.gem/ruby/1.8/bin:$PATH"
export EDITOR='vim'
export BROWSER='/Applications/Google\ Chrome.app'

export GEM_HOME=${HOME}/.gem/ruby/1.8
export GEM_PATH=${HOME}/.gem/ruby/1.8

export WORKON_HOME=$HOME/.envs
source /usr/local/share/python/virtualenvwrapper.sh
VIRTUALENVWRAPPER_PYTHON=/usr/local/bin/python

PYTHONPATH="/usr/local/share/python:/usr/local/lib/python2.7:$PYTHONPATH"
export PYTHONPATH

[[ -s $HOME/.tmuxinator/scripts/tmuxinator ]] && source $HOME/.tmuxinator/scripts/tmuxinator
[[ -s $HOME/.pythonbrew/etc/bashrc ]] && source $HOME/.pythonbrew/etc/bashrc
[[ -s "/Users/bzimmer/.rvm/scripts/rvm" ]] && source "/Users/bzimmer/.rvm/scripts/rvm"

